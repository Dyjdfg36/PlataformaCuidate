<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfazPrincipal2">


    <TextView
        android:id="@+id/icono2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="120dp"
        android:text="BIENVENIDO"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_abrirPrincipal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/ic_baseline_fact_check_24"
        android:textColor="#fff"
        android:backgroundTint="#ABB2B9"
        app:layout_constraintEnd_toStartOf="@+id/btn_abrirActividades"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="646dp" />

    <Button
        android:id="@+id/btn_abrirActividades"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_lista"
        android:backgroundTint="#018685"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="646dp" />


    <TextView
        android:id="@+id/txtVistaGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="5dp"
        android:width="115dp"
        android:background="@drawable/boton_inactivo"
        android:paddingStart="10dp"
        android:text="Vista General"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_abrirPrincipal"
        app:layout_constraintVertical_bias="0.545"></TextView>

    <TextView
        android:id="@+id/txtListadoTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:width="120dp"
        android:background="@drawable/boton_redondo"
        android:paddingStart="5dp"
        android:text="Listado de tareas"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtVistaGeneral"
        app:layout_constraintTop_toBottomOf="@+id/btn_abrirActividades"
        app:layout_constraintVertical_bias="0.545"></TextView>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="75dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/ic_book"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Leer un libro" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/ic_campana"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Limpiar la sala" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/ic_campana"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Tirar la basura" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/box_archive_solid"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Proyecto de programacion" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/ic_deporte"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Ir al gimnasio" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:height="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableStart="@drawable/ic_book"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Leer un articulo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>